{
    "openapi": "3.0.0",
    "info": {
        "title": "API AdoPet",
        "version": "1.0.0",
        "description": "API AdoPet"
    },
    "servers": [
        {
            "url": "http://localhost:3000/api",
            "description": "Local server"
        }
    ],
    "paths": {
        "/register": {
            "post": {
                "summary": "Register users",
                "responses": {
                    "200": {
                        "description": "Users registered successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/User"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "summary": "Login users",
                "responses": {
                    "200": {
                        "description": "Users logged in successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Login"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/forgot-password": {
            "post": {
                "summary": "Forgot password",
                "responses": {
                    "200": {
                        "description": "Password recovery email sent successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/ForgotPassword"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/reset/:token": {
            "post": {
                "summary": "Reset password",
                "responses": {
                    "200": {
                        "description": "Password recovery email sent successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/ResetPassword"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "username": {
                        "type": "string",
                        "example": "AdoPet"
                    },
                    "password": {
                        "type": "string",
                        "example": "123456"
                    },
                    "email": {
                        "type": "string",
                        "example": "adopet@email.com"
                    },
                    "phone": {
                        "type": "string",
                        "example": "1234567890"
                    },
                    "birthdate": {
                        "type": "string",
                        "example": "1990-01-01"
                    },
                    "cep": {
                        "type": "string",
                        "example": "12345678"
                    },
                    "state": {
                        "type": "string",
                        "example": "SP"
                    },
                    "city": {
                        "type": "string",
                        "example": "SÃ£o Paulo"
                    },
                    "neighborhood": {
                        "type": "string",
                        "example": "Vila Mariana"
                    },
                    "street": {
                        "type": "string",
                        "example": "Rua Domingos de Morais"
                    }
                }
            },
            "Login": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "AdoPet"
                    },
                    "password": {
                        "type": "string",
                        "example": "123456"
                    }
                }
            },
            "ForgotPassword": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "adopet@email.com"
                    }
                }
            },
            "ResetPassword": {
                "type": "object",
                "properties": {
                    "password": {
                        "type": "string",
                        "example": "123456"
                    }
                }
            }
        }
    }
}
